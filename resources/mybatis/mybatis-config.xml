<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	
	<environments default="dev">
		<environment id="dev">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="net.sf.log4jdbc.DriverSpy"/>
				<property name="url" value="jdbc:log4jdbc:oracle:thin:@127.0.0.1:1521:xe"/>
				<property name="username" value="JSP"/>
				<property name="password" value="JSP"/>
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource="com/greedy/jsp/member/model/dao/MemberDAO.xml"/>
		<mapper resource="com/greedy/jsp/notice/model/dao/NoticeDAO.xml"/>
		<mapper resource="com/greedy/jsp/board/model/dao/BoardDAO.xml"/>
	</mappers>
</configuration>
